<!DOCTYPE html>
<html>
  <head>
    <title>Whitecurryproj</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>White Curry</h1>
    </header>

    <div id= "menu">
      <ul>
        <li><%= link_to 'new', new_path %> </li>
      <li>  <%= link_to 'all', all_path %> </li>
        <% @categories_all.each do |category| %>
          <li><%= link_to category.name, category_path(category.id) %>  </li>
          <% end %>

      </ul>
    </div>

    <div id="search_bar">
      <%= form_tag search_path, method: 'get' do %>
        <%= select_tag "categories", options_from_collection_for_select(@categories_all, "id", "name"), include_blank: "All Categories" %>
        <%= text_field_tag :search_keywords %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
